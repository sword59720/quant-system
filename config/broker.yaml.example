# 券商交易配置模板
# 复制此文件为 broker.yaml 并填入真实信息

# ============================================================
# 掘金量化(MyQuant)配置
# ============================================================
myquant:
  name: "掘金量化"
  platform: "myquant"
  
  # 账户信息 (必填)
  token: "YOUR_TOKEN_HERE"        # 从掘金官网获取
  account_id: "YOUR_ACCOUNT_ID"   # 资金账号
  
  # 交易参数
  trade_mode: "live"              # paper | live
  order_type: "MARKET"            # MARKET | LIMIT
  
  # API模式配置
  api:
    endpoint: "https://www.myquant.cn/api"
    timeout: 30

# ============================================================
# 国投证券 EMP 配置
# ============================================================
guotou:
  name: "国投证券"
  platform: "emp"          # emp | traditional
  
  # 账户信息
  account_id: "YOUR_ACCOUNT_ID"
  api_key: "YOUR_API_KEY"
  api_secret: "YOUR_API_SECRET"
  api_endpoint: "YOUR_API_ENDPOINT"
  
  # 交易参数
  trade_mode: "live"
  order_type: "MARKET"
  
  emp:
    hosting_mode: "signal"   # signal | hosted
    use_alphat: false
    use_act: false
